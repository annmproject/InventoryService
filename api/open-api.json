{
   "definitions":{

   },
   "info":{
      "description":"powered by Flasgger",
      "termsOfService":"/tos",
      "title":"A swagger API",
      "version":"0.0.1"
   },
   "paths":{
      "/inventory":{
         "get":{
            "responses":{
               "200":{
                  "description":"A list of items"
               }
            },
            "summary":"Get a list of all items"
         },
         "post":{
            "parameters":[
               {
                  "in":"body",
                  "name":"body",
                  "required":true,
                  "schema":{
                     "properties":{
                        "cost":{
                           "description":"The cost of the item",
                           "type":"number"
                        },
                        "name":{
                           "description":"The name of the item",
                           "type":"string"
                        },
                        "quantity":{
                           "description":"The quantity of the item",
                           "type":"integer"
                        }
                     },
                     "type":"object"
                  }
               }
            ],
            "responses":{
               "200":{
                  "description":"The newly created item"
               },
               "400":{
                  "description":"Missing required keys in JSON payload"
               }
            },
            "summary":"Create a new item"
         }
      },
      "/inventory/{item_id}":{
         "delete":{
            "parameters":[
               {
                  "description":"The ID of the item to delete",
                  "in":"path",
                  "name":"item_id",
                  "required":true,
                  "type":"integer"
               }
            ],
            "responses":{
               "200":{
                  "description":"Item deleted successfully"
               },
               "404":{
                  "description":"Item not found"
               }
            },
            "summary":"Delete an item by ID"
         },
         "get":{
            "parameters":[
               {
                  "description":"The ID of the item to retrieve",
                  "in":"path",
                  "name":"item_id",
                  "required":true,
                  "type":"integer"
               }
            ],
            "responses":{
               "200":{
                  "description":"The item with the specified ID"
               },
               "404":{
                  "description":"Item not found"
               }
            },
            "summary":"Get an item by ID"
         },
         "put":{
            "parameters":[
               {
                  "description":"The ID of the item to update",
                  "in":"path",
                  "name":"item_id",
                  "required":true,
                  "type":"integer"
               },
               {
                  "in":"body",
                  "name":"body",
                  "required":true,
                  "schema":{
                     "properties":{
                        "cost":{
                           "description":"The cost of the item",
                           "type":"integer"
                        },
                        "id":{
                           "description":"The ID of the item (readonly)",
                           "type":"integer"
                        },
                        "name":{
                           "description":"The name of the item",
                           "type":"string"
                        },
                        "quantity":{
                           "description":"The quantity of the item",
                           "type":"integer"
                        }
                     },
                     "type":"object"
                  }
               }
            ],
            "responses":{
               "200":{
                  "description":"The updated item"
               },
               "400":{
                  "description":"Cannot update 'id' field"
               },
               "404":{
                  "description":"Item not found"
               }
            },
            "summary":"Update an item by ID"
         }
      }
   },
   "swagger":"2.0"
}